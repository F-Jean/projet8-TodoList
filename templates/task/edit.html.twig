{% extends 'layout.html.twig' %}

{% block header_title %}
    <h1 id="user-modif" class="d-flex justify-content-center my-5">Modifier une tâche</h1>
{% endblock %}

{% block container %}
    <div class="d-flex justify-content-center align-items-center">
        <div class="w-50">
            {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
                {{ form_widget(form) }}
                <div class="d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-success me-5">Modifier</button>
                    <a href="{{ path('task_list_todo') }}" class="btn btn-primary">Retour à la liste des tâches</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
