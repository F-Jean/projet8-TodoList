{% extends 'layout.html.twig' %}

{% block header_title %}
    <h1 id="user-create" class="my-5">Connexion</h1>
{% endblock %}

{% block container %}
    <div class="d-flex justify-content-center">
        <form action="{{ path('app_login') }}" method="post" name="login">
            <div class="mb-3">
                <label for="username" class="form-label">Nom d'utilisateur :</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
            </div>
            <div>
                <label for="password" class="form-label">Mot de passe :</label>
                <input type="password" id="password" class="form-control" name="_password" />
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button class="btn btn-success" type="submit">Se connecter</button>
            </div>
        </form>
    </div>
{% endblock %}