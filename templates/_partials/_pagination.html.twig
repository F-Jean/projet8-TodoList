{# Vérification qu'on a plus d'une page sinon ça ne sert à rien de paginer #}
<div class="d-flex justify-content-center">
    {% if pages > 1 %}
    <nav class="mt-5">
        <ul class="pagination">
            {# Vérification que la page est supérieur à 1 sinon on désactive #}
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a href="{{ path(path, {page: currentPage - 1}) }}" class="page-link">&lt;</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link">&lt;</a>
                </li>
            {% endif %}
            {% for page in 1..pages %}
                <li class="page-item {{ (page == currentPage) ? 'active' : '' }}">
                     <a href="{{ path(path, {page: page}) }}" class="page-link">{{ page }}</a>
                </li>
            {% endfor %}
            {% if currentPage < pages %}
                <li class="page-item">
                    <a href="{{ path(path, {page: currentPage + 1}) }}" class="page-link">&gt;</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link">&gt;</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
</div>